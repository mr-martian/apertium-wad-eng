<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- wad → eng -->

  <mode name="wad-eng" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="wad-eng.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="wad-eng.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="wad-eng.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="wad-eng.autobil.bin"/>
      </program>
      <program name="lrx-proc">
        <file name="wad-eng.autolex.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-wad-eng.wad-eng.t1x"/>
        <file name="wad-eng.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-wad-eng.wad-eng.t2x"/>
        <file name="wad-eng.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-wad-eng.wad-eng.t3x"/>
        <file name="wad-eng.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="wad-eng.autogen.bin"/>
      </program>

      <program name="lt-proc -p">
        <file name="wad-eng.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>

  <!-- eng → wad -->

  <mode name="eng-wad" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="eng-wad.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="eng-wad.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="eng-wad.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="eng-wad.autobil.bin"/>
      </program>
      <program name="lrx-proc">
        <file name="eng-wad.autolex.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-wad-eng.eng-wad.t1x"/>
        <file name="eng-wad.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-wad-eng.eng-wad.t2x"/>
        <file name="eng-wad.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-wad-eng.eng-wad.t3x"/>
        <file name="eng-wad.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="eng-wad.autogen.bin"/>
      </program>

      <program name="lt-proc -p">
        <file name="eng-wad.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>
</modes>

